# script to check and make sure that the delayed job worker is running at all times.

ps waux | grep nms > $HOME/.$$processes
grep 'jobs:work' $HOME/.$$processes > /dev/null

if [ $? != 0 ]
then
  cd $HOME/ingenious/; bundle exec rake jobs:work RAILS_ENV='production' > /dev/null
fi

rm $HOME/.$$processes

