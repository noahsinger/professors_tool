/* --------------------------- */
/* tables */
/* --------------------------- */

table {
	background-color: transparent;
	width: 99%;
	margin: 5px 0 5px 0;
}

	table tr.alt {
		background-color: #ddd;
	}
	
	table tr.over {
		background-color: #ffa;
	}
	
	table tr th {
		font-size: .7em;
		font-weight: bold;
		vertical-align: middle;
		padding: 0 0 0 1px;
	}
	
	table tr td {
		border-right: 1px solid #eee;
		padding: 5px;
		vertical-align: middle;
	}
	
		table tr td:last-child {
			border: 0;
		}
	
		table tr td.nav a {
			float: none;
			text-align: center;
		}
	
	table tr.last_row {}
	
	table tr td.total {
		text-align: right;
	}
	
div.fancy {
	margin: 0 0 0 -180px;
	padding: 0 0 0 180px;
	background-color: #111;
	opacity: .8;
}

	div.fancy table {
		background-color: transparent;
	}
	
		div.fancy table tr {
			background-color: transparent;
		}
		
		div.fancy table tr.over {
			background-color: #000;
		}
	
		div.fancy table tr.red_bg {
			background-color: #f11;
		}
		
		div.fancy table tr th {
			background-color: transparent;
			font-size: .6em;
		}
		
		div.fancy table tr td {
			border: 0;
			border-top: 1px solid #444;
			color: #eee;
			padding: 15px 5px;
		}

/* --------------------------- */
/* forms */
/* --------------------------- */

form {
	margin: 5px 0 5px 0;
}

form ol {
	margin: 0 0 0 -120px;
	list-style-type: decimal;
	list-style-type: decimal-leading-zero;
	font-family: tahoma;
	color: #bbb;
	font-size: 2em;
}

	form ol li {
		opacity: .8;
		background-color: #111;
		margin: 0 0 1px 0;
		padding: 5px 10px 15px 120px;
	}
	
		form ol li .light {
			font-size: .3em;
			letter-spacing: 1px;
		}
		
		form ol li div.light {
			display: block;
		}
	
		form ol li label {
			font-size: .5em;
		}
		
		form ol li input[type="text"],form ol li input[type="password"], form ol li textarea {
			font-size: .5em;
			width: 500px;
			padding: 3px;
		}
		
			form ol li input[type="text"]:focus, form ol li input[type="password"]:focus, form ol li textarea:focus {
				background-color: orange;
			}
		
		form ol li select {
			border: 1px solid #444;
			font-size: .5em;
			padding: 3px;
		}
			
			form ol li select:focus {
				background-color: orange;
			}
			
		form ol li input[type="submit"] {
			display: none;
		}
						
		form ol li.submit_bar {
			margin: 0;
			padding: 0;
			background-color: transparent;
/*			border: 1px solid red;*/
			list-style-type: none;
			height: 40px;
		}
		
		form ol li.submit_bar a:focus {
			color: #fff;
		}
								
		form ol li div#submit_div {
			padding: 10px 20px 0px 0;
			margin: 0 0 0px 0;
			font-size: .5em;
			cursor: pointer;
			text-align: right;
			background-color: #111;
			width: 300px;
			float: left;
			height: 30px;
		}
		
			form ol li div#submit_div:hover {
				background-color: orange;
			}
			
				form ol li div#submit_div:hover a {
					color: #fff;
				}
				
		form ol li div#waiting_div {
			padding: 10px 0px 0px 0px;
			font-size: .4em;
			float: right;
			background-color: #111;
			width: 0px;
			height: 30px;
		}
		
			form ol li div#waiting_div span {
				display: none;
			}
				
		form ol li div.light {
			width: 545px;
		}
			
		form ol li div.fancy {
			margin-left: -120px;
			padding-left: 120px;
		}
		
		form ol li div.fancy table label {
			font-size: 1em;
		}
		
		form ol li div.fancy table input {
			font-size: 1em;
		}
			
		form ol li div.fancy table th {
			font-size: .3em;
			font-weight: normal;
		}
		
		form ol li div.fancy table td {
			font-size: .5em;
		}

