@font-face {
	font-family: 'Copperplate';
	src: url( '../fonts/Copperplate Gothic Light.ttf' ) format('truetype');
}

@font-face {
	font-family: 'Miso';
	src: url( '../fonts/Miso.OTF' ) format('truetype');
}

body {
	font-family: verdana, arial, helvetica, sans-serif;
	font-size: 16px;
	color: #444;
	background-color: #fff;
	text-align: center;
	margin: 0 0 0 0;
	padding: 0;
}

#page {
	text-align: left;
	margin: 0 0 0 150px;
}

/* --------------------------- */
/* Custom tags                 */
/* --------------------------- */

.clear {
	clear: both;
}

.right {

}

.red {
	color: #d00;
}

.red_bg {
	background-color: #f11;
}

.green {
