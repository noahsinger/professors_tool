/* --------------------------- */
/* nav                         */
/* --------------------------- */

div.nav {
	opacity: .8;
	height: 130px;
	margin-left: -330px;
	background-color: #111;
	padding-left: 330px;
}

ul.nav {
    list-style: none;  
    position: relative;  
    margin: 0;  
    padding: 0;
}  

	ul.nav li {  
		opacity: 1;
	    display: block;  
	    overflow: hidden;  
	    padding: 0px;  
		float: left;  
		width: 140px;  
	    height: 130px;  
	    margin: 0 5px 0 0;
		border-left: 6px solid #fff;
	}
	
		ul.nav li:hover {
			background-color: orange;
		}
			
		ul.nav li a {
			display: block;
			margin: 5px 10px;
			padding: 0;
			font-size: 1.5em;
			line-height: 1.2em;
/*			border: 1px solid red;*/
			height: inherit;
			width: 230px;
		}
		
			ul.nav li a:focus {
				color: #fff;
			}
				
			ul.nav li:hover a {
				color: #111;
			}
			
	ul.nav li a span.text {
		float: left;
		width: 120px;
		height: inherit;
/*		border: 1px solid green;*/
		font-weight: normal;
		display: block;
/*		font-family: 'Copperplate';*/
		font-family: Miso, arial, helvetica, sans-serif;
	}
	
		ul.nav li a span.text span.sub {
			margin-top: 15px;
			font-size: .6em;
			display: block;
			line-height: 1.4em;
			color: #666;
			font-family: helvetica, arial, sans-serif;
		}
		
			ul.nav li a:hover span.text span.sub {
				color: #fff;
			}
			
	ul.nav li a span.icon {
		font-family: helvetica, arial, sans-serif;
		float: right;
/*		border: 1px solid yellow;*/
		width: 100px;	
		height: inherit;
		text-align: right;
		font-size: 7em;
		line-height: .95em;
/*		font-size: 3em;*/
/*		padding-top: 40px;*/
	}

/* --------------------------- */
/* javascript warning          */
/* --------------------------- */
	
#javascript_warning {
	margin-left: -330px;
}
	
#javascript_warning li {
	height: 110px;
	padding: 20px 0 0 340px;
	color: #fff;
	background-color: #f00;
	font-size: 1.3em;
	text-transform: uppercase;
}

/* --------------------------- */
/* IE Warning                  */
/* --------------------------- */

#ie_warning {
	background-color: yellow;
	color: #000;
	opacity: .8;
	margin: 0 0 20px 0;
	display: none;
}

	#ie_warning h3 {
		color: #000;
		font-weight: bold;
		font-size: 1em;
		background-color: #ff9;
		padding: 10px;
		margin: 0;
	}
	
	#ie_warning p {
		padding: 10px;
		margin: 0;
		line-height: 1.7em;
	}

