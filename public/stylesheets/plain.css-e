/* --------------------------- */
/* ul                          */
/* --------------------------- */

ul {
	margin: 0 0 30px -180px;
}

	ul li {
		margin: 6px 0;
		background-color: #111;
		opacity: .8;
		padding: 0 0 0 175px;
	}
	
		ul li:hover {
			background-color: orange;
		}
		
		ul li:hover a {
			color: #fff;
		}
		
			ul li a {
				padding: 10px;
				display: block;
			}
			
			ul li a span {
				display: block;
			}

			ul li a .class_long_name, ul li a .assignment_title {
				font-size: 1.6em;
				letter-spacing: .05em;
				line-height: 1em;
/*				font-family: 'Copperplate', georgia, times, serif;*/
				font-family: Miso, arial, helvetica, sans-serif;
				color: orange;
				font-weight: normal;
				
				margin-left: 0;
				margin-top: 0;
				width: auto;
				position: relative;
			}
	
				ul li a:hover .class_long_name, ul li a:hover .assignment_title {
					color: #111;
					font-weight: bold;
				}
	
		ul li a .class_short_name, ul li a .assigned_date {
			font-weight: normal;
			font-size: .8em;
			color: #fff;
		}
		
			ul li a:hover .class_short_name, ul li a:hover .assigned_date {
				color: #444;
			}
	
		ul li a .class_meetings, ul li a .due_date, ul li a .class_credits, ul li a .assignment_points {
			font-size: .7em;
			color: #fff;
		}
		
			ul li a:hover .class_meetings, ul li a:hover .due_date, ul li a:hover .class_credits, ul li a:hover .assignment_points {
				color: #444;
			}
		
		ul li span.top_half {
			padding: 10px 10px 3px 10px;
			font-weight: bold;
			display: block;
			color: #aaa;
		}
		
			ul li span.top_half a {
				color: orange;
			}
			
				ul li:hover span.top_half {
					color: #111;
				}
				
				ul li:hover span.top_half a {
					color: #111;
				}
											
		ul li span.bottom_half {
			padding: 0px 10px 10px 10px;
			display: block;
		}
		
		ul li span.bottom_half a {
			display: inline;
		}
		
			ul li:hover span.bottom_half {
				color: #444;
			}
			
			ul li:hover span.bottom_half a {
				color: #fff;
			}
			
		ul li a span.bottom_half {
			color: #444;
		}
		
		ul li span.bottom_half p {
		}
		
ul.link_bar {
