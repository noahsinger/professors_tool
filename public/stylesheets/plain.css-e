#monitor_instructions {
	display: none;
	font-size: .7em;
	position: absolute;
	top: 130px;
	left: 20px;
	width: 600px;
	background-color: #fff;
	padding: 0 20px 20px 20px;
	border: 2px solid #111;
	
	-moz-border-radius: 11px;  
	-webkit-border-radius: 11px;  
	border-radius: 11px;
}

	#monitor_instructions a.icon {
		border: 2px solid #444;
		padding: 0px 4px;
		background-color: orange;
		color: #fff;
		font-weight: bold;
		width: 30px;
		text-align: center;
		margin: 0 3px 0 0;
		
		-moz-border-radius: 8px;  
		-webkit-border-radius: 8px;  
		border-radius: 8px;
	}
	
	#monitor_links .toggle_monitoring_instructions_link {
		color: #ddd;
	}

	#monitor_instructions ol {
		margin: 10px 0 10px 30px;
		font-size: inherit;
		list-style-type: decimal;
	}
	

