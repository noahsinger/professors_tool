// --------------------------------------------------------
// right side table tabs
// --------------------------------------------------------

table#requirements {
xxx@xxx.xxx grad( #82A169, #57784B );
xxx@xxx.xxx right_tab_shadow;

	width: 100%;
	float: right;

	border-collapse: collapse;
	color: #fff;
	font-size: .9em;
	margin-bottom: 30px;
	
	tr {
		border-bottom: 1px solid darken(#57784B, 10%);
		
		&:last-child {
			border-bottom: none;
			font-weight: bold;
		}
		
		&:first-child {
			td {
				padding-top: 20px;
			}
		}
		
		td {
			padding: 10px 20px;
			
			&:last-child {
				text-align: right;
				width: 30%;
			}
		} // end td
	} // end tr
}


// --------------------------------------------------------
// left multicolored tabs
// --------------------------------------------------------

ul#course_labs, ul#assignments, ul#assignment_extras, ul#admin_semesters {
xxx@xxx.xxx debug_border;
xxx@xxx.xxx inset;
	
	/* added because safari 6 changed something that only affected this one element */
	margin-left: 0%;
	/* --- */
	
	overflow: hidden;
	width: 50%;
	padding-top: 5px;
	
	clear: left;
	
	li {
xxx@xxx.xxx color_grad;
xxx@xxx.xxx left_tab;
xxx@xxx.xxx medium_tab;
		width: 90%;
xxx@xxx.xxx three_part;
		clear: left;
	}
}


// --------------------------------------------------------
// right small multicolored tabs
// --------------------------------------------------------

ul#course_links, ul#tutorials, ul#past_sections, ul#section_links, ul#assignment_links, ul#data_links, ul#request_links {	
	li {
xxx@xxx.xxx color_grad;
xxx@xxx.xxx right_tab;
xxx@xxx.xxx short_tab;
xxx@xxx.xxx one_part;
		
		a {
xxx@xxx.xxx left_cap;
		}
	}
}


// --------------------------------------------------------
// right and left multicolored tabs
// --------------------------------------------------------

ul#next_prev {
xxx@xxx.xxx inset;
	
	li.prev {
xxx@xxx.xxx color_grad;
xxx@xxx.xxx left_tab;
xxx@xxx.xxx medium_tab;
xxx@xxx.xxx one_part;

		a {
xxx@xxx.xxx right_cap;
		}
	}

	li.next {
xxx@xxx.xxx color_grad;
xxx@xxx.xxx right_tab;
xxx@xxx.xxx medium_tab;
xxx@xxx.xxx one_part;
		
		a {
xxx@xxx.xxx left_cap;
		}
	}
	
	padding-top: 10px;
	overflow: hidden;
xxx@xxx.xxx clearfix;
}


// -----------------------------
// assignment objective
// -----------------------------

#assignment_objective {
xxx@xxx.xxx grad( #86AC4B, #3F7126 );
xxx@xxx.xxx wide_tab;
xxx@xxx.xxx left_tab;
	color: #fff;

	strong {
		display: block;
		border-bottom: 1px solid darken(#3F7126, 10%);
		padding: 3px 20px;
		font-weight: normal;
xxx@xxx.xxx neue_family;
	}
	
	p {
		margin: 0;
		padding: 10px 20px;
xxx@xxx.xxx georgia_family;
	}
}


// ----------------------------
// fancy tables
// ----------------------------

div.fancy table {
	border-collapse: separate;
	border-spacing: 10px;
	width: 99.8%;
	margin-left: 1px;
	margin-bottom: 20px;
xxx@xxx.xxx giant_tab_style;
	box-shadow: 0px 2px 2px #555, inset 10px 0px 20px -8px #555, inset -10px 0px 20px -8px #555;
	
	a {
		color: #fff;
	}
		
	th {
		text-align: left;
		padding: 10px 0 0 10px;
	}
	
	tr {
		
		td {
			padding: 10px;
			background-color: #669966;
			font-size: 1.2em;
		
			&:first-child {
				padding-left: 10px
			}
			
			&:last-child {
				padding-right: 20px;
			}
			
			&.title, &.enrollments, &.days {
				font-size: 1.1em;
			}
			
			&.status, &.edit, &.destroy, &.show, &.deenroll, &.grade, &.ungrade {
				text-align: center;
				background-color: transparent;
				text-shadow: none;
				padding: 0;

				&:hover {
					background-color: #0a0;
				}
				
				a {
					display: block;
					padding: 10px;
				}
			}
			
			&.status {
				position: relative;
				width: 10px;
				
				left: 10px;
				
				&.red {
					background-color: #770000;
				}
				
				&.green {
					background-color: #009900;
				}
				
				&:hover {
					background-color: transparent;
				}
			}
			
			&.enrollments, &.days, &.worth, &.avg {
				text-align: center;
			}
			
			&.blank {
				text-align: right;
				background-color: transparent;
				border: 0;
			}
		}
	}
	
	td {
		input[type=text], input[type=number] {
			background-color: #889883;
			padding: 10px 15px; //inner field padding
			
			width: 80%;
			
			font-size: 1.1em;
			color: #fff;
		}
	}
} //end fancy tables

p.paginated_links {
	text-align: center;
	font-size: 1.2em;
	width: $inner-width - 5;
	margin: 0 auto;
	
	a {
		color: #eee;
	}
	
	span.link {
		padding-right: 20px;
	}
}

