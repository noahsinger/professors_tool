// --------------------------------------------------------
// blue page section header styles
// --------------------------------------------------------

#page_content {
	header#course_labs_header, header#assignments_header, header#assignment_extras_header, header#view_semesters_header {
xxx@xxx.xxx medium_tab;
		width: 56%;
xxx@xxx.xxx blue_header;
xxx@xxx.xxx left_tab;
		
		h1 {
xxx@xxx.xxx right_cap;
		}
