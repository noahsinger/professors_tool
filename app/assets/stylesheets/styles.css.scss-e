}


// ---------------------------
// course disclaimer
// ---------------------------

p#disclaimer, #tutorial_step, .admin_comments {
xxx@xxx.xxx paper;
xxx@xxx.xxx text;
xxx@xxx.xxx centered_tab;
	
	&.wide {
xxx@xxx.xxx giant_tab_style;
xxx@xxx.xxx full_width;
	}
	
	h1 {
		font-size: 1.2em;
xxx@xxx.xxx walkway_family;
	}
	
	img {
		width: 100%;
	}
	
	#enrollments_chart {
		position: relative;
		left: -30px;
		margin: 0 auto;
		width: 75%;
// 		height: 90%;
	}
}


// ---------------------------
// paper left tabs
// ---------------------------

div#course_description, div#course_objectives, p#no_assignments, div#assignment_instructions {
xxx@xxx.xxx paper;
xxx@xxx.xxx left_tab;
xxx@xxx.xxx medium_tab;
xxx@xxx.xxx text;
	
	table {
		border: 1px solid #ccc;
		width: 100%;
		
		tr {
			&:nth-child(odd) {
				background-color: #eee;
			}
			
			th, td {
				padding: 5px 10px;
			}
			
			th {
				background-color: #ddd;
			}
		}
	}
}


// ---------------------------
// syllabus
// ---------------------------

#syllabus {
xxx@xxx.xxx paper;
xxx@xxx.xxx centered_tab;
	width: 90%;
	
	h1, h2, h3 {
		margin: 0;
	}
	
	h3 {
		font-weight: normal;
		font-size: 1em;
	}
	
	h1 {
		font-size: 4em;
xxx@xxx.xxx neue_family;
	}
	
	h2 {
		font-size: 2em;
		font-weight: normal;
	}
	
	table {
		width: 100%;
		margin-top: 15px;

		tr {
			border-bottom: 1px solid #eee;
			
			&:last-child {
				border-bottom: 0;
			}
		}
		
		td {
			padding: 5px 30px 5px 0;
			
			&:last-child {
				padding-right: 0;
			}
		}
	}
	
	div {
		margin: 30px 0;
		
		h3 {
			font-size: 1.2em;
xxx@xxx.xxx walkway_family;
		}
	}
	
	ul {
		li {
			list-style: circle;
		}
	}
	
	ol {
		li {
			list-style: decimal-leading-zero;
		}
	}
	
	ul, ol {
		margin-left: 30px;
		
		li {
			margin: 5px 0;
		}
	}
}


