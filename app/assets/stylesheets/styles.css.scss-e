// downset blue page section header styles
// --------------------------------------------------------

#page_content {
	header#instructor_header, header#course_description_header, header#course_objectives_header, header#assignment_instructions_header {
		z-index: 10;
xxx@xxx.xxx medium_tab;
xxx@xxx.xxx blue_header;
xxx@xxx.xxx left_tab;
xxx@xxx.xxx downset;
		
		h1 {
xxx@xxx.xxx right_cap;
		}
	}
	
	#resources header#requirements_header {
xxx@xxx.xxx blue_header;
xxx@xxx.xxx right_tab;
