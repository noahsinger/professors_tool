@import 'colors';
@import 'mixins';

// ---------------------------------------------------------
// ipad landscape
// ---------------------------------------------------------

@media all and (max-width: 1024px) {
	// ----------------------------
	// large centered background header (like homepage)
	// ----------------------------

	h1.page_description {
		font-size: 3em;
	}
	
	
	// --------------------------------------------------------
	// form styles
	// --------------------------------------------------------

	// -----------------------
	// forms
	// -----------------------
	form {
		width: 95%;

		h1 {
		} // end h1


		// -----------------------
		// ol contains all of the form fields
		// -----------------------
		ol {

			// -----------------------
			// li for each field
			// -----------------------
			li {

				// -----------------------
				// left side of the field tab
				// -----------------------
				div.details {

					// -----------------------
					// what we want to know
					// -----------------------
					label {
					} // end label


					// -----------------------
					// special instructions
					// -----------------------
					p {
					} // end p
				} // end div.details


				// -----------------------
				// the field's div
				// -----------------------
				div.field {


					// -----------------------
					// the field itself
					// -----------------------
					input[type=text], input[type=email], input[type=password] {
					} // end input

					textarea {
					}

					input[type=checkbox] {
					}

					select {
					}
				} // end div.field



				// -----------------------
				// for file fields
				// -----------------------
				div.file {

					div.field_with_errors {
					}

					input {
					}

					img {
					}			

					.prompt {
					}	
				}

				div.filename {
				}

				div.jquery_datepicker {
				}
			} // end li



			li.textarea {
				div.details {
				}

				div.field {

					textarea {
					}
				}
			}

			li.datepicker {
				div.details {
				}
			}



			// -----------------------
			// special for the submit button
			// -----------------------
			li.action {

				div {

					input {
					}
				}
			}
		} // end ol


		// -----------------------------------------
		// form error messages
		// -----------------------------------------
		div#error_explanation {
			margin-left: 0;

			h2 {
			}

			p {
			}

			ul {

				li {
				}
			}
		} // end div#errorExplanation

		div.field div.field_with_errors {
			input[type=text], input[type=file], input[type=email], textarea {
			}
		}

	} // end form	
} // end ipad landscape


