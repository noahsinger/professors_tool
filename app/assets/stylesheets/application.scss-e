/*
*= require_self
*= require jquery-ui
*= require_tree
*/

a {
	text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
	line-height: 1.2em;
}

/* ---- grid ---- */

#page {
	width: 90%;
	margin: 10px auto;
}

/* clear fix */
#page:after {
  content: '';
  display: block;
  clear: both;
}

/* ---- .block ---- */

.block,
.grid-sizer {
  width: 33%;
	// height: 200px;
	padding: 20px 0;
}

.block--width2, .chart { width: 66.3%; }
// .block--height2 { height: 403px; }

.block {
  float: left;
  background-color: #ccc;
	margin: 0 1px;
	transition: width 1s;
}

.block h1, .block h2, .block h3, .block h4, .block h5, .block h6, .block p, .block nav, .block table, .block section {
	margin: 3px 20px;
}

	.block table {
		width: 90%;
	}

.block h1:first-child, .block h2:first-child, .block h3:first-child, .block p:first-child {
	// padding-top: 20px;
}

.block.flash {
	font-weight: bold;
}

	.block.flash.error {
		background-color: #900;
		color: #fff;
	}

	.block.flash.notice {
		background-color: #090;
		color: #fff;
	}

.how_to_step_image img {
	max-width: 100%;
}

/* ---- other ---- */

@media screen and (max-width: 800px) {
	#page {
		width: 95%;
		margin: 5px auto;
	}

	/* ---- .block ---- */

	.block,
	.grid-sizer {
	  width: 49%;
		padding: 20px 0;
	}

	.block--width2 { width: 98%; }
}

@media screen and (max-width: 480px) {
	#page {
		width: 100%;
		margin: 5px auto;
	}

	/* ---- .block ---- */

	.block,
	.grid-sizer {
	  width: 99%;
		padding: 20px 0;
	}

	.block--width2 { width: 99%; }
}
