<%# student assignment show %>

<%= render 'semesters/semesters_header' %>
<%= render partial: 'semesters/semester', locals: xxx@xxx.xxx %>
<%= render partial: 'sections/section', locals: xxx@xxx.xxx %>

<%= render partial: 'assignment', locals: xxx@xxx.xxx main: true} %>

<div class="block">
	<header>
		<h3>Requirements</h3>
	</header>
	<table>
xxx@xxx.xxx do |r| %>
			<tr>
				<td><%= r.description %></td><td><%= r.points %> pts</td>
			</tr>
		<% end %>
xxx@xxx.xxx %> pts</td></tr>
	</table>
</div>

<div class="block block--width2">
	<header>
		<h4>Instructions</h4>
	</header>
	<section>
		<%= xxx@xxx.xxx %>
	</section>
</div>

<% xxx@xxx.xxx > 0 %>
	<div class="block">
		<header>
			<h4>Extras</h4>
		</header>
		<ul>
xxx@xxx.xxx do |extra| %>
				<li>
					<%= link_to extra.file.url do %>
						<div><%= extra.description %></div>
						<b><%= extra.file_file_name %></b>
						<p></p>
					<% end %>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>
