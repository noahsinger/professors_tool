<%= render partial: 'semesters/semester', locals: {semester: @semester} %>
<%= render partial: 'courses/course', locals: {course: @section.course} %>
<%= render partial: 'sections/section', locals: {section: @section, main: true} %>

<%= render 'sections/syllabus_header' %>
<%= render 'grade_requests/grade_requests_header' %>

<% if @section.course.materials.size > 0 %>
	<%= render partial: 'materials/materials_header', locals: {course: @section.course} %>
<% end %>

<% if @section.examples.size > 0 %>
	<%= render partial: 'examples/examples_header', locals: {semester: @semester, section: @section} %>
<% end %>

<%= render partial: 'steps/steps_list', locals: {course: @section.course} %>

<% if @assignments.size > 0 %>
	<%= render partial: 'assignment', collection: @assignments, cached: true %>
<% else %>
	<%= render partial: 'no_assignments', locals: {section: @section} %>
<% end %>
