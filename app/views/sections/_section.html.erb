<div class="block sections <%= double_width_if_main(defined? main) %>">
	<header>
		<%= link_to semester_section_assignments_path(section.semester, section) do %>
			<p><%= section.course.short_name %></p>
			<h3><%= section.course.title %></h3>
		<% end %>
	</header>
	
	<p>
		<%= section.days %><br/>
		<%= section.meeting_times %>
	</p>

	<ul>
		<li><%= link_to "Homework RSS Feed" , semester_section_assignments_path(section.semester,section, format: :rss) %></li>
		<li><%= link_to "Homework ICAL Feed", semester_section_assignments_url(section.semester,section, format: :ics, protocol: 'webcal'), title: 'Subscribe to this classes assignments calendar using Outlook or iCal' %></li>
	</ul>
</div>
