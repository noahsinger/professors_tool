<div class="block form waiters">
<%= form_for([@course,@waiter], remote: true) do |f| %>
	<%= show_error_messages_for @waiter %>
	<ol>
	  <li>
		<div class="details">  
			<%= f.label :email %>
			<p>Please provide an email address where you can be contacted.</p>
		</div>
		
	    <div class="field"><%= f.text_field :email, placeholder: "first_last@mail.tulsacc.edu" %></div>
	  </li>

	  <li class="action">
	    <div><%= f.submit 'Submit' %></div>
	  </li>
	</ol>
<% end %>
</div>
