<%= content_for :header do %>
	<h1>Request your grades</h1>
	for xxx@xxx.xxx %>
<% end %>

<nav>
	<h1>Navigation</h1>
	<ul>
		<li><%= link_to xxx@xxx.xxx @section ) do %> <%= render :partial => "shared/back_link" %> <% end %></li>
	</ul>
</nav>

<section>
	<h1>Complete the Form</h1>
	<%= xxx@xxx.xxx @section, @grade_request]) do |f| %>
		<%= error_messages_for :grade_request %>
		<ol>
			<li>
				Provide your official email address so your grades can be found.
				<%= f.label :email %>
				<%= f.text_field :email %>
			</li>
			<li>
				<%= f.submit "Send Request" %>
			</li>
		</ol>
	<% end %>
</section>
