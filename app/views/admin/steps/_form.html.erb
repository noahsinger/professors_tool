<div class="block form block--width2 steps">
	<%= form_for([:admin,@how_to,@step], html: {multipart: true}, remote: true) do |f| %>
		<%= show_error_messages_for @step %>
		<input type="hidden" name="course_id" value="<%= @course.id %>">
		<ol>
			<li>
				<div class="details">
					<%= f.label :title %>
					<p>The title of this Step</p>
				</div>
				<div class="field"><%= f.text_field :title %></div>
			</li>
		
			<li class="textarea">
				<div class="details">
					<%= f.label :instructions %>
					<p>This steps instructions</p>
				</div>
				<div class="field"><%= f.text_area :instructions %></div>
			</li>
		
			<li>
				<div class="details">
					<%= f.label :image %>
					<p>Select an image to go with this step if there is an image that you want to use. Otherwise leave this field blank</p>
				</div>
				<div class="file field">
					<span class="prompt">Click to Browse</span>
					<%= f.file_field :image %>
				</div>
				<div class="filename"></div>
			</li>
		
			<li class="action">
				<div><%= f.submit %></div>
			</li>
		</ol>
	<% end %>
</div>
