<tr id="<%= step.id %>">
	<td>
		<% if step.position %>
			<%= step.position %>
		<% else %>
			X
		<% end %>
	</td>
	<td><%= link_to step.title, admin_how_to_step_path(@how_to, step, xxx@xxx.xxx %></td>
	<td class="edit"><%= link_to 'Edit', edit_admin_how_to_step_path(@how_to, step, xxx@xxx.xxx %></td>
	<td class="destroy"><%= link_to 'Destroy', admin_how_to_step_path(@how_to, step, xxx@xxx.xxx data: {confirm: 'Are you sure?'}, method: :delete, remote: true %></td>
</tr>
