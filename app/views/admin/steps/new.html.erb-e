<%= content_for :header do %>
	<h1>How to: xxx@xxx.xxx %></h1>
	<h4>Create a new step</h4>
<% end %>

<nav>
		<li><%= link_to xxx@xxx.xxx do %> <%= render :partial => "shared/back_link" %> <% end %></li>
	</nav>

<%= xxx@xxx.xxx :html => {:multipart => true}) do |f| %>
<%= xxx@xxx.xxx %>
	<ol>
		<li><div class="details"><%= f.label :title %><p></p></div><div class="field"><%= f.text_field :title %></div></li>
		<li><div class="details"><%= f.label :instructions %><p></p></div><div class="field"><%= f.text_area :instructions %></div></li>
		<li><div class="details"><%= f.label :image %><p></p></div><div class="field"><%= f.file_field :image %></div></li>
		<li class="submit_bar">
			<%= f.submit "Create" %>
		</li>
	</ol>
<% end %>


