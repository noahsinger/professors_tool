<div class="block <%= double_width_if_main(defined? main) %> general_contacts header">
	<header>
		<%= link_to admin_general_contacts_path do %>
			<p><%= pluralize GeneralContact.count, 'contact' %></p>
			<h3>Contacts</h3>
		<% end %>
	</header>
	
	<ul class="actions">
		<li><%= link_to 'Clear All Contacts', destroy_all_admin_general_contacts_path, data: {confirm: 'Are you sure?'}, method: :delete %></li>
	</ul>
</div>
