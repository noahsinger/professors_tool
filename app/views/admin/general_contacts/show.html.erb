
<%= render 'general_contacts_header' %>

<%= render @general_contact %>

<div class="block general_contacts">
	<table>
		<tr>
			<td class="blank">Return email:</td>
			<td><%= @general_contact.return_email %></td>
		</tr>

		<tr>
			<td class="blank">Subject:</td>
			<td><%= @general_contact.subject %></td>
		</tr>

		<tr>
			<td class="blank">Body:</td>
			<td><%= @general_contact.body %></td>
		</tr>

		<tr>
			<td class="blank">Attachment:</td>
			<td><%=link_to @general_contact.attachment_file_name, @general_contact.attachment.url %></td>
		</tr>
	</table>
</div>
