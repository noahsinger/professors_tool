<header>
	<%= link_to admin_student_path(student) do %>
		<p>
			<%= "#{student.last_name}, #{student.first_name} #{student.middle_name}" %>
	  	<% if student.goes_by and not student.goes_by.blank? %>
	    	(<%= student.goes_by %>)
			<% end %>
		</p>
		<h3><%= truncate student.last_name, length: 12 %></h3>
  	
	<% end %>
</header>
<p><%= student.email %></p>
<p><%= pluralize student.enrollments.count, 'class' %> taken</p>
