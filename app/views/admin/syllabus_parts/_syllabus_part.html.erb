<div class="block syllabus_parts" id="syllabus_part_<%= syllabus_part.id %>">
	<header>
		<p><%= syllabus_part.name %></p>
		<h5>policy</h5>
	</header>

	<ul>
		<li>
			<%= link_to 'Add to this course', add_syllabus_part_admin_course_policies_path(@course, syllabus_part_id: syllabus_part.id), method: :post, remote: true %>
		</li>
		<li class="icon"><%= link_to edit_admin_syllabus_part_path( syllabus_part, course_id: @course ), {class: "icon icon-note", title: "Edit"} do %><span class="text_label">Edit</span><% end %></li>
		<li class="icon"><%= link_to admin_syllabus_part_path(syllabus_part,course_id: @course), {class: "icon icon-trash", title: "Destroy", data: {confirm: 'Are you sure?', method: :delete, remote: true}} do %><span class="text_label">Destroy</span><% end %></li>
	</ul>

	<p><%= truncate syllabus_part.description, length: 240 %></p>
</div>
