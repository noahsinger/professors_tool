
<%= render partial: 'admin/courses/course', locals: {course: @course} %>
<%= render partial: 'admin/tutorials/tutorials_header', locals: {main: true} %>

<div class="block tutorials" data-script='$("#tutorials").reorderTable( "<%= sort_admin_course_tutorials_url( @course ) %>", "<%= form_authenticity_token %>" );'>
	<header>
		<p><%= @course.title %></p>
		<h4>Tutorials</h4>
	</header>

	<table>
		<thead>
			<tr>
				<th>HowTo</th>
			</tr>
		</thead>
		<tbody id="tutorials">
			<% for tutorial in @tutorials %>
				<%= render tutorial %>
			<% end %>
		</tbody>
	</table>
</div>

<% @how_tos.each do |how_to| %>
	<% if ! @course.tutorials.where(['how_to_id=?', how_to.id]).first %>
		<%= render how_to %>
	<% end %>
<% end %>
