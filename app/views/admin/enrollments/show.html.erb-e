<%= content_for :header do %>
	<h1>Student Information</h1>
<% end %>

<section>
	<nav>
			<%= link_to 'Back', xxx@xxx.xxx @section ), :class => "icon back" %>
	</nav>
	
	<header>
		<p>Enrollment for <%= @section.meeting_days %> xxx@xxx.xxx %></p>
xxx@xxx.xxx %></h1>
	</header>

	<% 
		possible = 0 
		earned = 0
	%>


	<div class="fancy">
		<table>
			<tr>
				<th>Assignment</th>
				<th>Lab</th>
				<th>Worth</th>
				<th>Score</th>
			</tr>
xxx@xxx.xxx do |assignment| %>
				<% 
					work xxx@xxx.xxx :first, :conditions => ['assignment_id=?',assignment] )
					earned += work.score if work
					possible += assignment.worth
				%>
	
				<tr>
					<td>
						<% if work %>
							<%= link_to assignment.title, xxx@xxx.xxx @section, assignment, work ) %>
						<% else %>
							<%= assignment.title %>
						<% end %>
					</td>
					<td><%= assignment.lab.title %></td>
					<td><%= assignment.worth %></td>		
					<td>
						<% if work %>
							<%= work.score %>
						<% else %>
							-
						<% end %>
					</td>
				</tr>
			<% end %>
			<tr>
				<td colspan="2" class="blank">Totals:</td>
				<td><%= possible %></td>
				<td><%= earned %></td>
			</tr>
		</table>
	</div>

	<header>
			<p>
xxx@xxx.xxx = EnrollmentStatus.find( :all ) -%>
				<%- outputs = [] -%>
	
xxx@xxx.xxx do |status| %>
					<% xxx@xxx.xxx == status.name %>
						<% outputs << status.name %>
					<% else %>
						<% outputs << link_to( status.name, xxx@xxx.xxx @section, @enrollment, :enrollment => {:enrollment_status_id => status.id} ), :method => :put ) %>
					<% end %>
				<% end %>
				
				<%= outputs.join( " &bull; " ).html_safe %>
			</p>
			<h1>
				Current Score:
				<%= @enrollment.current_average %>% - xxx@xxx.xxx %>
			</h1>
	</header>
</section>
