<div class="block <%= double_width_if_main(defined? main) %> labs">
	<header>
		<%= link_to admin_course_lab_path(@course, lab) do %>
			<p><%= lab.title %></p>
			<h4>Lab</h4>
		<% end %>
	</header>

	<ul>
		<li class="icon"><%= link_to [:edit,:admin,@course,lab], {class: "icon icon-note", title: "Edit"} do %><span class="text_label">Edit</span><% end %></li>
		<li><%= link_to 'Duplicate', [:duplicate,:admin,@course,lab], method: :post, remote: true %></li>
		<li class="icon"><%= link_to [:admin,@course,lab], {class: "icon icon-trash", title: "Destroy", data: {confirm: 'Are you sure?', method: :delete, remote: true}} do %><span class="text_label">Destroy</span><% end %></li>
	</ul>

	<p><%= lab.objective %></p>

	<p><%= pluralize lab.worth, "point" %></p>

	<p><b>is lab visible:</b> <%= lab.visible %></p>
	<p><b>are uploads allowed:</b> <%= lab.allow_uploads %></p>
</div>
