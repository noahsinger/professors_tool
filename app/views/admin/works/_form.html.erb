<%= xxx@xxx.xxx :html => {:multipart => true}) do |f| %>
	<%= xxx@xxx.xxx %>
	<ol>
		<li>
			<div class="details">
				<%= f.label :assignment %>
				<p>Which assignment?</p>
			</div>
			
			<div class="field"><%=  select( "work", "assignment_id", Assignment.all.collect {|s| [ s.title + ' - ' + s.lab.title, s.id ] }, { :include_blank => true } ) %></div>
		</li>
		
		<li>
			<div class="details">
				<%= f.label :enrollment %>
				<p>For whom?</p>
			</div>

			<div class="field"><%=  select( "work", "enrollment_id", Enrollment.where(['section_id = xxx@xxx.xxx {|s| [ s.student.last_name + ', ' + s.student.first_name, s.id ] }.sort, { :include_blank => true } ) %></div>
		</li>

		<% xxx@xxx.xxx %>
			<li>
				<div class="details">
					<%= f.label :upload %>
					
					<p>			
						<% xxx@xxx.xxx %>
							Current upload: <%= xxx@xxx.xxx @work.upload.url %>
						<% else %>
							No upload included yet
						<% end %>
					</p>
				</div>
				
				<div class="file field">
					<span class="prompt">Click to Browse</span>
					<%= f.file_field :upload %>
				</div>
				<div class="filename"></div>
			</li>
		<% end %>

		<li class="action">
			<div><%= f.submit submit_name %></div>
		</li>
	</ol>
<% end %>
