<div class="block books">
	<header>
	  <p><%= book.title %></p>
		<h4>Book</h4>
  </header>

	<ul>
		<li class="icon"><%= link_to edit_admin_course_book_path(@course,book), {class: "icon icon-note", title: "Edit"} do %><span class="text_label">Edit</span><% end %></li>
		<li class="icon"><%= link_to [:admin,@course,book], {class: "icon icon-trash", title: "Destroy", data: {confirm: 'Are you sure?', method: :delete, remote: true}} do %><span class="text_label">Destroy</span><% end %></li>
	</ul>

  <p>
		required: <%= book.required %><br/>
		by: <%= book.author %><br/>
		publisher: <%= book.publisher %><br/>
		ISBN: <%= book.isbn %>
	</p>

</div>
