<div class="block form instructors">
<%= form_for([:admin,@instructor], html: {multipart: :true}, remote: true) do |f| %>
	<%= show_error_messages_for @instructor %>
	<ol>
		<li><div class="details"><%= f.label :first_name %><p></p></div><div class="field"><%= f.text_field :first_name %></div></li>
	
		<li><div class="details"><%= f.label :last_name %><p></p></div><div class="field"><%= f.text_field :last_name %></div></li>
	
		<li><div class="details"><%= f.label :title %><p></p></div><div class="field"><%= f.text_field :title %></div></li>
	
		<li><div class="details"><%= f.label :phone_number %><p></p></div><div class="field"><%= f.text_field :phone_number %></div></li>
	
		<li><div class="details"><%= f.label :office_number %><p></p></div><div class="field"><%= f.text_field :office_number %></div></li>
	
		<li>
			<div class="details">
				<%= f.label :office_hours %>
				<% if @instructor.office_hours %>
				<p>Off hours file is currently: <%= @instructor.office_hours_file_name %></p>
				<% else %>
					<p>Choose a file containing the instrucors office hours to upload.  This file is best as a pdf.</p>
				<% end %>
			</div>
			
			<div class="file field">
				<span class="prompt">Click to Browse</span>
				<%= f.file_field :office_hours %>
			</div>
			<div class="filename"></div>
		</li>

		<li><div class="details"><%= f.label :email %><p></p></div><div class="field"><%= f.text_field :email %></div></li>
		
		<li>
			<div class="details">
				<%= f.label :twitter_handle %>
				<p>Enter the instructors twitter name (handle) without the @ sign if they have one</p>
			</div>
			<div class="field">
				<%= f.text_field :twitter_handle %>
			</div>
		</li>
	
		<li><div class="details"><%= f.label :website %><p></p></div><div class="field"><%= f.text_field :website %></div></li>
	
		<li><div class="details"><%= f.label :division %><p></p></div><div class="field"><%=  select( "instructor", "division_id", Division.all.collect {|s| [ s.name, s.id ] }, { include_blank: true } ) %></div></li>
	
		<li class="action">
			<div><%= f.submit %></div>
		</li>
	</ol>
<% end %>
</div>
