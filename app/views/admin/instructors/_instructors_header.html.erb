<div class="block <%= double_width_if_main(defined? main) %> instructors header">
	<header>
		<%= link_to admin_instructors_path do %>
			<p><%= pluralize Instructor.count, 'instructor' %></p>
			<h3>Instructors</h3>
		<% end %>
	</header>
	
	<ul class="actions">
		<li class="icon"><%= link_to new_admin_instructor_path, {class: "icon icon-plus", title: "New"} do %><span class="text_label">Add a New Instructor</span><% end %></li>
	</ul>
</div>
