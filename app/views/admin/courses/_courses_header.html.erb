<div class="block <%= double_width_if_main(defined? main) %> courses header">
	<header>
		<%= link_to admin_courses_path do %>
			<p><%= pluralize Course.count, 'course' %></p>
			<h3>Courses</h3>
		<% end %>
	</header>
	
	<ul class="actions">
		<li class="icon"><%= link_to new_admin_course_path, {class: "icon icon-plus", title: "New"} do %><span class="text_label">New Course</span><% end %></li>
	</ul>
</div>
