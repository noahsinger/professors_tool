<div class="block <%= double_width_if_main(defined? main) %> courses">
	<header>
		<%= link_to admin_course_path(course) do %>
			<p><%= course.title %></p>
			<h3><%= course.short_name %></h3>
		<% end %>
	</header>	
	
	<ul>
		<li><%= link_to 'Edit', edit_admin_course_path(course) %></li>
		<li><%= link_to 'Destroy', [:admin,course], data: {confirm: 'Are you sure?'}, method: :delete, remote: true %></li>
	</ul>
</div>
