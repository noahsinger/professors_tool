<h4>Labs</h4>

<div class="fancy">
	<table>
	  <tr>
	    <th>Title</th>
	    <th>Objective</th>
		<th>Visible</th>
		<th>Uploads Allowed</th>
	
		<th></th>
		<th></th>
	  </tr>

	<% for lab xxx@xxx.xxx %>
	  <tr>
	    <td class="nav"><%=link_to lab.title, xxx@xxx.xxx %></td>
	    <td><%=h lab.objective %></td>
		<td><%= lab.visible %></td>
		<td><%= lab.allow_uploads %></td>
	    <td class="nav"><%= link_to 'Edit', xxx@xxx.xxx %></td>
	    <td class="nav"><%= link_to 'Destroy', xxx@xxx.xxx :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>

<ul class="link_bar">
	<li><%= link_to 'New lab', xxx@xxx.xxx ) %></li>
</ul>

<h4>Materials</h4>

<ul class="link_bar">
	<li><%= link_to 'New material', xxx@xxx.xxx %></li>
</ul>

<div class="fancy">
	<table>
	  <tr>
	    <th>Title</th>
	    <th>Description</th>
	    <th>File</th>

		<th></th>
		<th></th>
	  </tr>

	<% for material xxx@xxx.xxx %>
	  <tr>
	    <td class="nav"><%=link_to material.title, xxx@xxx.xxx %></td>
	    <td><%=h material.description %></td>
	    <td class="nav"><%=link_to material.file_file_name, material.file.url %></td>
	    <td class="nav"><%= link_to 'Edit', xxx@xxx.xxx %></td>
	    <td class="nav"><%= link_to 'Destroy', xxx@xxx.xxx :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>

<h4>Tutorials</h4>

<div class="fancy">
	<table>
		<tbody id="tutorials">
			<% for tutorial xxx@xxx.xxx %>
			<tr id="<%= tutorial.id %>">
				<td class="nav"><%= link_to tutorial.how_to.title, [:admin,tutorial.how_to] %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<ul class="link_bar">
	<li><%= link_to 'Modify Tutorials', xxx@xxx.xxx ) %></li>
</ul>

