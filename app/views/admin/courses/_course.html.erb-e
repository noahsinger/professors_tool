<div class="block <%= double_width_if_main(defined? main) %> courses">
	<header>
		<p><%= course.title %></p>
		<h3><%= link_to course.short_name, admin_course_path(course) %></h3>
	</header>	
	
	<ul>
		<li><%= link_to 'Edit', edit_admin_course_path(course) %></li>
		<li><%= link_to 'Destroy', [:admin,course], confirm: 'Are you sure?', method: :delete, remote: true %></li>
	</ul>
</div>
