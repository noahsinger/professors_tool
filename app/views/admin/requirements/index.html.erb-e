<h1>Listing requirements</h1>

<table>
  <tr>
    <th>Lab</th>
    <th>Description</th>
    <th>Points</th>
  </tr>

<% for requirement xxx@xxx.xxx %>
  <tr>
    <td><%=h requirement.lab.title %></td>
    <td><%=h requirement.description %></td>
    <td><%=h requirement.points %></td>
    <td><%= link_to 'Show', xxx@xxx.xxx %></td>
    <td><%= link_to 'Edit', xxx@xxx.xxx %></td>
    <td><%= link_to 'Destroy', xxx@xxx.xxx :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', xxx@xxx.xxx ) %> |
<%= link_to 'New requirement', xxx@xxx.xxx @lab ) %>
