<div class="block <%= double_width_if_main(defined? main) %> sections header">
	<header>
		<%= link_to admin_semester_sections_path(semester) do %>
			<p><%= semester.name %></p>
			<h4>Sections</h4>
		<% end %>
	</header>

	<ul class="actions">
		<li class="icon"><%= link_to new_admin_semester_section_path(semester), {class: "icon icon-plus", title: "New"} do %><span class="text_label">New Section</span><% end %></li>
	</ul>
</div>
