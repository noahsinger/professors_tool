<div class="block form block--width2 how_tos">
	<%= form_for([:admin,@how_to], remote: true) do |f| %>
		<%= show_error_messages_for @how_to %>
		<input type="hidden" name="course_id" value="<%= @course.id %>"/>
		<ol>
			<li><div class="details"><%= f.label :title %><p></p></div><div class="field"><%= f.text_field :title %></div></li>
			<li class="textarea"><div class="details"><%= f.label :description %><p></p></div><div class="field"><%= f.text_area :description %></div></li>
			<li class="action">
				<div><%= f.submit %></div>
			</li>
		</ol>
	<% end %>
</div>
