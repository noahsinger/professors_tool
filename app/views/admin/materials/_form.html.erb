<div class="block form block--width2 materials">
	<%= form_for([:admin,@course,@material], html: {multipart: true}, remote: true) do |f| %>
		<%= show_error_messages_for @material %>
		<ol>
			<li>
				<div class="details">
					<%= f.label :title %>
					<p></p>
				</div>
				<div class="field">
					<%= f.text_field :title %>
				</div>
			</li>
		
		
			<li class="textarea"><div class="details"><%= f.label :description %><p></p></div><div class="field"><%= f.text_area :description %></div></li>
			<li>
				<div class="details">
					<%= f.label :file %>
					<p>Select the material file for upload</p>
				</div>
				<div class="file field">
					<span class="prompt">Click to Browse</span>
					<%= f.file_field :file %>
				</div>
				<div class="filename"></div>
			</li>
			<li class="action">
				<div><%= f.submit %></div>
			</li>
		</ol>
	<% end %>
</div>
