<div class="block materials header <%= double_width_if_main(defined? main) %>">
	<header>
		<% if @section %>
			<%= link_to course_materials_path(course, section_id: @section) do %>
				<p><%= pluralize course.materials.count, "File" %> available</p>
				<h3>Materials</h3>
			<% end %>
		<% else %>
			<%= link_to course_materials_path(course) do %>
				<p><%= pluralize course.materials.count, "File" %> available</p>
				<h3>Materials</h3>
			<% end %>
		<% end %>
	</header>
</div>
